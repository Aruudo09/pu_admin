<div class="container">
    <div class="page-inner">
      <div class="page-header">
        <h3 class="fw-bold mb-3">User Level</h3>
        <ul class="breadcrumbs mb-3">
          <li class="nav-home">
            <a href="#">
              <i class="icon-home"></i>
            </a>
          </li>
          <li class="separator">
            <i class="icon-arrow-right"></i>
          </li>
          <li class="nav-item">
            <a href="#">Tables</a>
          </li>
          <li class="separator">
            <i class="icon-arrow-right"></i>
          </li>
          <li class="nav-item">
            <a href="#">Datatables</a>
          </li>
        </ul>
      </div>
      <div class="row">
        <div class="col-md-12">
          <div class="card">
            <div class="card-header">
              <div class="d-flex align-items-center">
                <h4 class="card-title">User Level Table</h4>
                <a
                  class="btn btn-primary btn-round ms-auto userLevelAddBtn"
                  data-bs-toggle="modal"
                  data-bs-target="#editUserModal"
                  data-bs-toggle="tooltip"
                  title=""
                  data-original-title="Edit Task"
                >
                  <i class="fa fa-plus"></i>
                  Add Row
                </a>
              </div>
            </div>
            <div class="card-body">

              <div class="table-responsive">
                <table id="userLevelTable" class="table table-striped table-bordered">
                  <thead>
                    <tr>
                      <th>ID Level</th>
                      <th>Nama Level</th>
                      <th>Actions</th>
                    </tr>
                  </thead>
                  <tbody></tbody> <!-- Data akan diisi secara dinamis oleh DataTables -->
                </table>
                
                <table
                  id="add-row"
                  class="display table table-striped table-hover"
                >
                  <thead>
                    <tr>
                        <th>ID Level</th>
                        <th>Nama Level</th>
                      <th style="width: 10%">Action</th>
                    </tr>
                  </thead>
                  <tfoot>
                    <tr>
                      <th>ID Level</th>
                      <th>Nama Level</th>
                      <th>Action</th>
                    </tr>
                  </tfoot>
                  <tbody>
                    <% userlevel.forEach(function(user) {%>
                        <tr>
                            <td><%= user.id_level %></td>
                            <td><%= user.nama_level %></td>
                            <td>
                                <div class="form-button-action">
                                <a
                                    data-bs-toggle="modal"
                                    data-bs-target="#editUserModal"
                                    data-id="<%= user.id_level %>"
                                    data-bs-toggle="tooltip"
                                    title=""
                                    class="btn btn-link btn-primary btn-lg userLevelEditBtn"
                                    data-original-title="Edit Task"
                                  >
                                    <i class="fa fa-edit"></i>
                                </a>
                                <a
                                    type="button"
                                    data-bs-toggle="tooltip"
                                    data-id="<%= user.id_level %>"
                                    title=""
                                    class="btn btn-link btn-danger userLevelDelBtn"
                                    data-original-title="Remove"
                                  >
                                    <i class="fa fa-times"></i>
                                </a>
                                </div>
                              </td>
                        </tr>
                    <% } ); %>
                  </tbody>
                </table>
              </div>

            </div>

              <!-- MODAL EDIT DATA -->
              <div
              class="modal fade"
              id="editUserModal"
              tabindex="-1"
              role="dialog"
              aria-hidden="true"
            >
              <div class="modal-dialog" role="document">
                <div class="modal-content">
                  <div class="modal-header border-0">
                    <h5 class="modal-title">
                      <span class="fw-mediumbold"> Edit</span>
                      <span class="fw-light"> User </span>
                    </h5>
                    <button
                      type="button"
                      class="close"
                      data-bs-dismiss="modal"
                      aria-label="Close"
                    >
                      <span aria-hidden="true">&times;</span>
                    </button>
                  </div>
                  <div class="modal-body">
                    <form id="form_edit_users">
                      <div class="row">
                        <div class="col-sm-12">
                          <div class="form-group form-group-default">
                            <label>Nama Level</label>
                            <input
                              id="nama_level"
                              type="text"
                              class="form-control"
                            />
                            <!-- HIDDEN INPUT -->
                             <input 
                              type="hidden"
                              id="hidden_id_userlevel"
                             />
                          </div>
                        </div>
                    </div>
                    </form>
                  </div>
                  <div class="modal-footer border-0">
                    <button
                      type="button"
                      id="editUpdateButton"
                      class="btn btn-primary userLevelBtn"
                    >
                      Edit
                    </button>
                    <button
                      type="button"
                      class="btn btn-danger"
                      data-bs-dismiss="modal"
                    >
                      Close
                    </button>
                  </div>
                </div>
              </div>
            </div>

          </div>
        </div>
      </div>
    </div>
  </div>