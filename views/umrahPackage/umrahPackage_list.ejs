    <div class="row">
      <div class="col-md-12">
        <div class="card">
          <div class="card-header">
            <div class="d-flex align-items-center">
              <h4 class="card-title">Paket Umroh Table</h4>
              <a data-bs-toggle="modal" data-bs-target="#umrahPackageFormModal" class="btn btn-primary btn-round ms-auto" href=""><i class="fa fa-plus"></i> Add Paket Umrah</a>
            </div>
          </div>
          <div class="card-body">
            <div class="table-responsive" style="overflow-x: auto;">
              <table id="umrahPackage" class="display table table-striped table-hover w-100" style="width: 100%">
                <thead>
                  <tr>
                    <th>Action</th>
                    <th>Nama Paket</th>
                    <th>Travel</th>
                    <th>Tipe Paket</th>
                    <th>Harga</th>
                    <th>Durasi</th>
                    <th>Deskripsi</th>
                    <th>Dibuat Pada</th>
